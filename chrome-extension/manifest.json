{
  "manifest_version": 3,
  "name": "Monotreme URL Sender",
  "version": "1.0.0",
  "description": "Send current URL to Monotreme backend service",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Send URL to Monotreme"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}